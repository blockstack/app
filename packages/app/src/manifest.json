{
  "name": "Blockstack",
  "author": "Blockstack",
  "version": "<% VERSION %>",
  "description": "The Blockstack app is all you need to access the new internet. Access privacy-friendly apps and keep data in your control.",
  "icons": {
    "128": "assets/connect-logo/Token=Connect@128.png",
    "256": "assets/connect-logo/Token=Connect@256.png",
    "512": "assets/connect-logo/Token=Connect@512.png"
  },
  "content_security_policy": "script-src 'self'<% DEV_CSR %>; object-src 'self'; frame-src 'none';",
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "web_accessible_resources": ["inpage.js", "index.html"],
  "browser_action": {
    "default_title": "Blockstack",
    "default_icon": "assets/connect-logo/Token=Connect@128.png",
    "default_popup": "index.html#/popup"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "MacCtrl+Shift+B"
      },
      "description": "Opens Blockstack app interface"
    }
  },
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "js": ["message-bus.js"],
      "matches": ["*://*/*"]
    }
  ]
}
